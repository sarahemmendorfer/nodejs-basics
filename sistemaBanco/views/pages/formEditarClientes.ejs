<%- include('../partials/head'); %>
<%- include('../partials/header'); %>

<body>
    <div class="container bg-light mt-3 mb-5">
        <div class="bg-success row">
            <h1 class="text-uppercase font-weight-bold text-light mx-auto p-2">Cadastro de Clientes</h1>
        </div>
        <form action="/clientes/editarClientes/<%= cliente._id %>" method="POST" class="p-4" name="formClientes" onsubmit="return validaFormClientes(this);" >
            <div class="row mt-3">
                <div class="form-group col-md-8">
                    <label for="nomeCliente" class="row font-weight-bold text-uppercase ml-1">Nome</label>
                    <input type="text" id="nomeCliente" name="nomeCliente" placeholder="Nome do Cliente" maxlength="100"  class="col-12 p-2 border border-dark" value="<%= cliente.nome %>">
                </div>
                <div class="form-group col-md-4">
                    <label for="agenciaCliente" class="row font-weight-bold text-uppercase ml-1">Agência</label>
                    <input type="number" id="agenciaCliente" name="agenciaCliente" placeholder="Número da Agência" class="col-12 p-2 border border-dark"  value="<%= cliente.agencia %>">
                </div>
            </div>
            <div class="row mt-3">
                <div class="form-group col-md-4">
                    <label for="operacaoCliente" class="row font-weight-bold text-uppercase ml-1">Operação</label>
                    <select name="operacaoCliente" id="operacaoCliente" class="col-12 p-2 border border-dark" >
                        <option value="001" selected>001 – Conta Corrente de Pessoa</option>
                        <option value="002">002 – Conta Simples de Pessoa Física</option>
                        <option value="003">003 – Conta Corrente de Pessoa Jurídica</option>
                        <option value="006">006 – Entidades Públicas</option>
                        <option value="007">007 – Depósitos Instituições Financeiras</option>
                        <option value="013">013 – Poupança de Pessoa Física</option>
                        <option value="022">022 – Poupança de Pessoa Jurídica</option>
                        <option value="028">028 – Poupança de Crédito Imobiliário</option>
                        <option value="043">043 – Depósitos Lotéricos</option>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="contaCliente" class="row font-weight-bold text-uppercase ml-1">Conta</label>
                    <input type="number" id="contaCliente" name="contaCliente" placeholder="Conta" class="col-12 p-2 border border-dark"  value="<%= cliente.conta %>">
                </div>
                <div class="form-group col-md-4">
                    <button type="submit" class="btn btn-success mt-4 text-uppercase col-12 mx-auto" style="height: 3em;" >Cadastrar</button>
                </div>

            </div>
                
        </form>
    </div>

    <%- include('../partials/footer'); %>

