<%- include('../partials/head'); %>
<%- include('../partials/header'); %>


<div class="container bg-light mt-3">
    <div class="bg-info row">
        <h1 class="text-uppercase font-weight-bold text-light mx-auto p-2">Cadastro de Disciplinas</h1>
    </div>
    <form action="/editarDisciplinas/<%= disciplina._id %>" method="POST" class="p-4" name="formDisciplinas"  onsubmit="return validaDisciplinas(this);"  >
        <div class="row mt-3">
            <div class="form-group col-md-12">
                <label for="nomeDisciplina" class="row font-weight-bold text-uppercase ml-1">Nome</label>
                <input type="text" id="nomeDisciplina" name="nomeDisciplina" placeholder="Nome da Disciplina" maxlength="50"  class="col-12 p-2 border border-dark" value="<%= disciplina.cadNomeDisciplina %>">
            </div>
        </div>
        <div class="row mt-2">
            <div class="form-group col-md-6">
                <label for="cargaHoraria" class="row font-weight-bold text-uppercase ml-1">Carga HorÃ¡ria</label>
                <input type="number" id="cargaHoraria" name="cargaHoraria" placeholder="Tempo em Horas Total" class="col-12 p-2 border border-dark" maxlength="30" value="<%= disciplina.cadCargaHoraria %>">
            </div>
            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-danger mt-4 text-uppercase col-12 mx-auto" style="height: 3em;">Cadastrar</button>
            </div>
        </div>     
            
    </form>
</div>

