<%- include('../partials/head'); %>
<%- include('../partials/header'); %>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="row mt-5 mb-5">
                <div class="col-10 text-uppercase mb-2">
                    <h1>Professores Listados</h1>
                </div>
                <div class="col-2">
                    <a href="/cadastrarProfessores" class="btn btn-danger">Inserir</a>
                </div>
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>CPF</th>
                            <th>RG</th>
                            <th>País</th>
                            <th>Estado</th>
                            <th>Cidade</th>
                            <th>Rua</th>
                            <th>CEP</th>
                            <th>Número</th>
                            <th>Complemento</th>
                            <th>Telefone</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% professores.forEach(function(professor){ %>
                        <tr>
                            <td><%= professor.cadNomeProfessor %></td>
                            <td><%= professor.cadCpfProfessor %></td>
                            <td><%= professor.cadRgProfessor %></td>
                            <td><%= professor.cadPaisProfessor %></td>
                            <td><%= professor.cadEstadoProfessor %></td>
                            <td><%= professor.cadCidadeProfessor %></td>
                            <td><%= professor.cadRuaProfessor %></td>
                            <td><%= professor.cadCepProfessor %></td>
                            <td><%= professor.cadNumeroCasaProfessor %></td>
                            <td><%= professor.cadComplementoCasaProfessor %></td>
                            <td><%= professor.cadTelefoneProfessor %></td>
                            <td>
                                <a href="/editarProfessores/<%= professor._id %>" class="btn btn-info">Editar</a>
                                <a href="/deletarProfessor/<%= professor._id %>" class="btn btn-primary">Deletar</a>
                            </td>

                            <% }) %>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer'); %>