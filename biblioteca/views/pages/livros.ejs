<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Produtos</title>
</head>
<%- include('../partials/header'); %>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="row mt-5">
                    <div class="col-6">
                        <h1>Lista de Livros</h1>
                    </div>
                    <div class="col-6">
                        <a href="/cadastrarLivros" class="btn btn-primary ">Inserir</a>
                    </div>
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th>Título</th>
                                <th>Código</th>
                                <th>Assunto</th>
                                <th>Autor</th>
                                <th>Idioma</th>
                                <th>Data de Cadastro</th>
                                <th>Páginas</th>
                                <th>Edição</th>
                                <th>Ano</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- percorrendo -->
                            <!-- varredura -->
                            <% livros.forEach(function(livro){ %>
                            <tr>
                                <!-- recebe valor -->
                                <td><%= livro.tituloLivro %></td>
                                <td><%= livro.codigoLivro %></td>
                                <td><%= livro.assuntoLivro %></td>
                                <td><%= livro.autorLivro %></td>
                                <td><%= livro.idiomaLivro %></td>
                                <td><%= livro.dataCadastroLivro %></td>
                                <td><%= livro.paginasLivro %></td>
                                <td><%= livro.edicaoLivro %></td>
                                <td><%= livro.anoLivro %></td>
                                <td>
                                    <a href="" class="btn btn-sucess">Editar</a>
                                    <a href="/deletarLivro/<%= livro._id %>" class="btn btn-danger">Deletar</a>
                                </td>

                                <% }) %>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer'); %>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</body>
</html>